---
interface Props {
  title: string;
  svg: string; 
}

const { title, svg } = Astro.props;
---

<div
  class="
    flex items-center gap-2
    bg-white/10
    border border-white/20  
    rounded-full px-4 py-2 whitespace-nowrap
    backdrop-blur-md 
    shadow-md
    transition-colors duration-300
    hover:bg-white/20
    hover:border-white/30
  "
>
  <div class="w-5 h-5 text-white">
    <img src={svg} alt="icons" class="filter invert" />
  </div>
  <span class="text-sm font-medium text-white">{title}</span>
</div>
